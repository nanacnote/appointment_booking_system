extends layout

block content
   #team
    .container-fluid.w-75
      .d-flex.flex-column.justify-content-center.align-items-center
        h1.text-center.banner-title #{bannerTitle}
        .px-2
          p.text-center.banner-subtitle #{bannerSubtitle}
        .container-fluid
          .row
            .col.team-profile
              .team-pic
                img(src="/images/icons/profile.png", alt="team-member-photo")
              .h4 #{members.member1.name}
              p.bg-secondary.text-white.p-2.rounded #{members.member1.role}
              each val in members.member1.details
                p.small.team-details #{val}

            .col.team-profile
              .team-pic
                img(src="/images/icons/profile.png", alt="team-member-photo")
              .h4 #{members.member2.name}
              p.bg-secondary.text-white.p-2.rounded #{members.member2.role}
              each val in members.member2.details
